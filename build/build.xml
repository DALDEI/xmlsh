<project basedir=".." default="help" name="build-all">

	<import file="common.xml"/>
	<target name="help">
		<echo message="Usage: ant [build-all init help build clean clean install dist clean-all build-all build-deps]" />
	</target>
	  

	<target name="build">
		<iterate target="build" />
	</target>

	<target name="main-init" depends="init"/>
	<target name="init" depends="deps"/>
	<target name="install" depends="build">
		<iterate target="install" />
	</target>
	<target name="test build">
		<iterate target="test" />
	</target>
	<target name="dist" depends="build" >
		<iterate target="dist" />
	</target>

	<target name="clean">
		<iterate target="clean" />
	</target>
	<target name="clobber">
		<iterate target="clobber" />
	</target>

	<target name="build-all" depends="main-init,build,install,dist" />

	<target name="clean-all" depends="clean">
	</target>
	
	<target name="deps">
		<iterate target="deps" />
  </target>

</project>


